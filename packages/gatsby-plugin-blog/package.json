{
  "private": true,
  "name": "@maiertech/gatsby-plugin-blog",
  "description": "This Gatsby plugin encapsulates the logic for programmatically creating post pages for a blog.",
  "version": "0.2.1",
  "repository": "https://github.com/maiertech/gatsby-themes/tree/master/plugins/blog",
  "author": "Thilo Maier <git@maier.asia>",
  "keywords": [
    "gatsby",
    "gatsby-plugin"
  ],
  "license": "MIT",
  "main": "index.js",
  "files": [
    "/*.js"
  ],
  "scripts": {
    "build": "babel src --out-dir . --ignore **/__tests__",
    "prepare": "npm run build",
    "inspect": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "purge": "rm -rf ./node_modules"
  },
  "peerDependencies": {
    "gatsby": "^2.3.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-jest": "^24.7.1",
    "babel-preset-gatsby-package": "^0.1.4",
    "jest": "^26.5.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  }
}
