{
  "private": true,
  "name": "@maiertech/gatsby-themes",
  "description": "Gatsby themes for maier.tech websites.",
  "repository": "https://github.com/maiertech/gatsby-themes",
  "author": "Thilo Maier <git@maier.asia>",
  "license": "MIT",
  "workspaces": [
    "site",
    "themes/*"
  ],
  "scripts": {
    "clean": "yarn workspaces run clean",
    "rimraf": "rm -rf ./node_modules && yarn workspaces run rimraf",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "test": "yarn workspaces run test",
    "coverage": "yarn workspaces run coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lerna": "^3.13.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "dependencies": {
    "eslint": "^6.0.1",
    "eslint-plugin-shopify": "^29.0.2"
  }
}
