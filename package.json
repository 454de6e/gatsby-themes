{
  "private": true,
  "name": "@maiertech/gatsby-themes",
  "description": "Gatsby themes for maier.tech websites.",
  "repository": "https://github.com/maiertech/gatsby-themes",
  "author": "Thilo Maier <git@maier.asia>",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "plugins/*",
    "themes/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx --ignore-path '.gitignore' --ignore-path 'plugins/blog/.gitignore' .",
    "fix": "yarn run lint --fix .",
    "format": "pretty-quick",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "pretty-quick --staged",
      "eslint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@maiertech/eslint-config": "^0.8.0",
    "babel-eslint": "9.x",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
