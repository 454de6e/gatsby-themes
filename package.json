{
  "private": true,
  "name": "@maiertech/gatsby-themes",
  "description": "Gatsby themes for maier.tech websites.",
  "repository": "https://github.com/maiertech/gatsby-themes",
  "author": "Thilo Maier <git@maier.asia>",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "plugins/*",
    "themes/*"
  ],
  "scripts": {
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "pretty-quick",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage"
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "yarn run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
