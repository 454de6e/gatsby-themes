{
  "private": true,
  "workspaces": [
    "site",
    "themes/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run lint"
    }
  },
  "scripts": {
    "prettier": "prettier . --ignore-path .gitignore",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:prettier": "yarn run prettier --check",
    "format": "run-s format:*",
    "format:eslint": "yarn run lint:eslint --fix",
    "format:prettier": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge",
    "test": "yarn workspaces run test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@maiertech/prettier-config": "0.2.1",
    "eslint": "6.0.1",
    "eslint-plugin-shopify": "29.0.2",
    "husky": "3.0.0",
    "lerna": "3.13.1",
    "lint-staged": "9.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2"
  }
}
